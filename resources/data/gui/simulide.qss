/* Customize any plain widget that is a child of a QMainWindow. */
QMainWindow > .QWidget {
    background-color: #625B6C;
    border: 0px solid #000000;
}

QWidget {
    selection-color: black;
    selection-background-color: Silver;
    color: black;
    min-height:15px;
}

/* Customize the menu bar. */
QMenuBar {
    background-color: #625B6C;
    border-image: none;
    border-style: none;
    padding: 2px;
}

QToolBar {
     background: #8D8195;
     border-image: none;
     border-style: none;
     padding: 4px;
     spacing: 0px; /* spacing between items in the tool bar */
 }

 QToolBar::handle {
     image: url(handle.png);
 }

QToolButton { /* all types of tool button */
     border: 1px outset #625B6C;
     border-radius: 6px;
     background-color: #DED9EA;
     padding: 0px;  
     margin: 2px;
     margin-top: 1px;
     margin-bottom: 2px;                  
 }
 
QPushButton:pressed,
QToolButton:pressed {
     border: 1px inset #625B6C;
     margin: 2px;
     margin-top: 2px;
     margin-bottom: 1px;    
 }
 
QPushButton:hover,
QToolButton:hover{
    background-color: #FFFFFF;
    margin: 0px;   
    padding: 0px; 
}
 
QPushButton {
    border: 1px outset darkslategray;
     border-radius: 6px;
     background-color: qlineargradient(x1: 0, y1: 0, x2: 0, y2: 1, stop: 0 #fffcfa, stop: 1 #bab5b0);
    padding: 3px;
    font-size: 10px;
    padding-left: 5px;
    padding-right: 5px;
}

 
 QSplitter::handle {
     image: url(images/splitter.png);
 }

 QSplitter::handle:horizontal {
     width: 2px;
 }

 QSplitter::handle:vertical {
     height: 2px;
 }

 QSplitter::handle:pressed {
     image: url(images/splitter_pressed.png);
 }
 
QSplitter{
    border: 0px solid green;
     border-radius: 0px;
     padding: 0px;
}

 
QTabWidget::pane { /* The tab widget frame */
     border-image: none;
     border-style: none;
     top: 4px;
     bottom: 4px;
 }

 QTabWidget::tab-bar {
     top: 4px;
 }

 /* Style the tab using the tab sub-control. Note that
     it reads QTabBar _not_ QTabWidget */
 QTabBar::tab {
     background: #DED9EA;
     border-radius: 6px;
     min-width: 3ex;
     min-height: 15ex;
     padding: 2px;
     font: bold;
 }

 QTabBar::tab:selected{
     background: #DED9EA;
     left: 2px;
 }
 
QTabBar::tab:hover:!selected {
    background: #B5B0BB;
    right: 3px;
 }


QTabBar::tab:!selected {
    background: #8D8195;
    margin: 2px;
    margin-left: 5px; /* make non-selected tabs look smaller */
 }


QTreeWidget{
    border-radius: 6px;
}


QTreeView {
    background: gray;
    border-image: none;
    border-style: none;
 }
