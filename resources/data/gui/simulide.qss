QPlainTextEdit{
    background-color: white;
    color: black;
}

QAbstractScrollArea{
    border-radius: 6px;
    bottom: 4px;
}
QGraphicsScene{
    border-radius: 6px;
    bottom: 4px;
}

/* Customize tooltips. */
QToolTip {
    background-color:gray;
    border-color: darkslategray;
    border-width: 1px;
    border-style: solid;
    padding: 3px;
    font: bold;
    border-radius: 4px;
}

QMenu {
    border-color: darkslategray;
    border-width: 1px;
    border-style: outset;
    border-radius: 4px;
    font: bold;
    background: #DED9EA;
    selection-background-color: #C0C0C0
}

QMenu::item{
    padding: 2px 25px 2px 20px;
     border: 1px solid transparent; /* reserve space for selection border */
     
}

QMenu::item:hover,
QMenu::item:selected {
     background: white;
     border: 1px solid #bfcde4;
 }
 
 
QLineEdit {
    padding: 2px;
    border: 1px solid #625B6C;
    border-radius: 6px;
}


QLabel {
    border: none;
    border-image: none;
    padding: 0;
    background: none;
    font-weight: bold;
    font-size: 12px;
}


QSpinBox {
    background: #EFEFEE;
    border: 1px inset #625B6C;
    padding: 4px;
    border-radius: 6px;
    font-size: 13px;
    font-weight: bold;
 }

QSpinBox::up-button {
    background: #DED9EA;
    subcontrol-origin: border-1;
    subcontrol-position: top right;
    border: 1px outset #625B6C;
    border-top-right-radius: 4px;
}

QSpinBox::down-button {
    background: #DED9EA;
    subcontrol-origin: border-1;
    subcontrol-position: bottom right;
    border: 1px outset #625B6C;
    border-bottom-right-radius: 4px;
}

QSpinBox::down-button:pressed,
QSpinBox::up-button:pressed {
    border: 1px inset #625B6C;
    padding-left: 2px;
}

QSpinBox::down-button:hover,
QSpinBox::up-button:hover {
    background: white;
}

QSpinBox::up-arrow {
    image: url(:/arrow-up.png);
}

QSpinBox::down-arrow {
    image: url(:/arrow-down.png);
}


QComboBox{
    background: white;
    border: 1px solid #625B6C;
    padding: 2 px;
    border-radius: 6px;
}

QListWidget{
    background: gray;
}
